# ─── Axiom Backend Configuration ───

# Server
HOST=0.0.0.0
PORT=8000

# Database (Postgres / Actian VectorAI DB)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/axiom
ACTIAN_VECTORAI_HOST=localhost
ACTIAN_VECTORAI_PORT=5432
ACTIAN_VECTORAI_DB=vectorai
ACTIAN_VECTORAI_USER=postgres
ACTIAN_VECTORAI_PASSWORD=postgres

# LLM (for claim extraction + agent reasoning)
# Supports: openai, anthropic, local
LLM_PROVIDER=anthropic
ANTHROPIC_API_KEY=your-key-here
OPENAI_API_KEY=your-key-here

# Sphinx Oracle
SPHINX_API_URL=https://api.sphinx.ai/v1
SPHINX_API_KEY=your-key-here

# Embedding model (for RetrieverAgent)
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Risk thresholds
RISK_THRESHOLD_ALLOW=0.80
RISK_THRESHOLD_REWRITE=0.40
# Below REWRITE threshold = BLOCK
